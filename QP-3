#include <stdio.h>
#include <string.h>

#define MAX_STUDENTS 100 

int main() {
    char students[MAX_STUDENTS][50]; 
    int studentCount = 0; 
    char name[50];
    int choice;

    printf("Classroom Assignment Submission List\n");

    while (1) {
        printf("\n1. Add a student\n");
        printf("2. Display the student list\n");
        printf("3. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);
        getchar();  

        switch (choice) {
            case 1:
                if (studentCount < MAX_STUDENTS) {
                    printf("Enter the student's name: ");
                    fgets(name, sizeof(name), stdin); 
                    name[strcspn(name, "\n")] = 0;  
                    strcpy(students[studentCount], name);  
                    studentCount++;  
                    printf("Student %s has been added to the list.\n", name);
                } else {
                    printf("The list is full. No more students can be added.\n");
                }
                break;

            case 2:
                if (studentCount == 0) {
                    printf("No students have submitted their assignments yet.\n");
                } else {
                    printf("\nList of students who have submitted their assignments:\n");
                    for (int i = 0; i < studentCount; i++) {
                        printf("%d. %s\n", i + 1, students[i]);
                    }
                }
                break;

            case 3:
                printf("Exiting...\n");
                return 0;

            default:
                printf("Invalid choice. Please try again.\n");
        }
    }

    return 0;
}
